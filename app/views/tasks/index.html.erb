
<h1 class="title"> Good Afternoon! Toggle the link below to submit a new task</h1>
<h2 class="link"><%= link_to "Create New Task", tasks_new_path %></h2>
<h2 class="link"><%= link_to "Show Task", task_path(params[:id])%></h2>



<% if @tasks.blank? %>
  <p>You have no listed tasks</p>

<% else %>
  <% @tasks.each do |t| %>
  <article>
  <h1 class="begintask"> Your Tasks To Date: </h1>
  <p><%= t.name %>
  <%= t.description %>
  <%= t.status %>
  <%= t.date %></p>

<h2 class="link"><%= link_to "Delete", task_path(t), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }
   %></h2>
   <%=  %>
    
    </h2>
  </article>
  <%end%>
<%end%>
